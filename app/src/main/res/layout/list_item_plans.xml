<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:id="@+id/plan_card_layout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plan_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="20.0dp" />

        <TextView
            android:id="@+id/plan_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="This is a long description for this plan"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/plan_date"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:text="due date: 2020/11/30"
            android:textColor="#423939" />

    </LinearLayout>

    <TextView
        android:id="@+id/plan_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:layout_weight="2"
        android:text="$100"
        android:textAlignment="textEnd"
        android:textColor="#000"
        android:textSize="16dp" />
</RelativeLayout>